# ğŸ“„ Einzelnes Playbook anzeigen, wenn ein Dateiname Ã¼bergeben wurde
if [[ -n "$1" ]]; then
  file="playbooks/$1.yml"

  if [[ -f "$file" ]]; then
    path=$(realpath "$file")
    name=$(basename "$file" .yml)

    echo -e "\nğŸ“„ $path\n"
    echo "$name"
    echo ""

    if grep -Eq '^#\s*@meta|^#\s*@tag' "$file"; then
      grep -E '^#\s*@meta|^#\s*@tag' "$file" \
        | sed -E 's/^#\s*//g' \
        | sed -E 's/@meta[ \t]+([a-zA-Z0-9_-]+):[ \t]*/\1: /' \
        | sed -E 's/@tag:[ \t]*/tags: /'
    else
      echo "Keine @meta- oder @tag-Informationen gefunden."
    fi

    echo "----------------------------"
    exit 0
  else
    echo "âŒ Playbook nicht gefunden: $file"
    exit 1
  fi
fi
for file in playbooks/*.yml; do
  path=$(realpath "$file")
  name=$(basename "$file" .yml)

  if grep -Eq '^#\s*@meta|^#\s*@tag' "$file"; then
    echo -e "\nğŸ“„ $path\n"
    echo "$name"
    echo ""

    # Alle Zeilen mit @meta oder @tag ausgeben, formatiert
    grep -E '^#\s*@meta|^#\s*@tag' "$file" \
      | sed -E 's/^#\s*//g' \
      | sed -E 's/@meta[ \t]+([a-zA-Z0-9_-]+):[ \t]*/\1: /' \
      | sed -E 's/@tag:[ \t]*/tags: /'

    echo "----------------------------"
  else
    echo -e "\nğŸ“„ $path"
    echo "$name"
    echo "Keine @meta- oder @tag-Informationen gefunden."
    echo "----------------------------"
  fi
done

